<!DOCTYPE html>
<html>

  <head>
    <title>Second Lead</title>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body ng-app="drag-and-drop">
    <nav>
       <div class="nav-wrapper">
         <div class="row">
           <div class="col s12">
              <ul id="nav-mobile" class="right hide-on-med-and-down">
                <% if logged_in? %>
                  <li> <%= link_to "Home", root_path %> </li>
                  <li> <%= link_to "Browse", dramas_path %> </li>
                  <li> <%= link_to "My Lists", user_path(current_user) %> </li>
                  <li><%= link_to "Log Out", sessions_path, :method => :delete %></li>
                <% else %>
                  <li> <%= link_to "Home", root_path %> </li>
                  <li> <%= link_to "Browse", dramas_path %> </li>
                  <li><a href="<%= new_user_path %>">Sign Up</a></li>
                  <li><a href="<%= new_session_path %>">Log In</a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    </nav>
    <ui-view></ui-view>

    <%= yield %>

  </body>

</html>
